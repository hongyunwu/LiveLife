<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_binding_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/bind_phone_item_height"
        android:layout_marginLeft="@dimen/page_horizontal"
        android:layout_marginRight="@dimen/page_horizontal"
        android:background="@drawable/bottom_border_layer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/page_horizontal"
            android:text="手机号"
            android:textColor="@color/sub_txt_color"
            android:textSize="@dimen/content_txt_size" />

        <com.why.livelife.View.ClearEditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/normal_txt_color"
            android:textColorHint="@color/tips_txt_color"
            android:textCursorDrawable="@drawable/txt_cursor_shape"
            android:textSize="@dimen/content_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bind_phone_item_height"
        android:layout_marginLeft="@dimen/page_horizontal"
        android:layout_marginRight="@dimen/page_horizontal"
        android:background="@drawable/bottom_border_layer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/page_horizontal"
            android:text="密    码"

            android:textColor="@color/sub_txt_color"
            android:textSize="@dimen/content_txt_size" />

        <com.why.livelife.View.ClearEditText
            android:id="@+id/et_phone_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="6~16个字符"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="@color/normal_txt_color"
            android:textColorHint="@color/tips_txt_color"
            android:textCursorDrawable="@drawable/txt_cursor_shape"
            android:textSize="@dimen/content_txt_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bind_phone_item_height"
        android:layout_marginLeft="@dimen/page_horizontal"
        android:layout_marginRight="@dimen/page_horizontal"
        android:background="@drawable/bottom_border_layer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/page_horizontal"
            android:text="验证码"
            android:textColor="@color/sub_txt_color"
            android:textSize="@dimen/content_txt_size" />

        <com.why.livelife.View.ClearEditText
            android:id="@+id/et_phone_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:paddingRight="@dimen/page_horizontal"
            android:textColor="@color/normal_txt_color"
            android:textColorHint="@color/tips_txt_color"
            android:textCursorDrawable="@drawable/txt_cursor_shape"
            android:textSize="@dimen/content_txt_size" />

        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/phone_code_selector"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_gravity="center_vertical"
            android:textColor="@color/phone_code_txt_selector" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/page_horizontal"
        android:layout_marginRight="@dimen/page_horizontal"
        android:layout_marginTop="@dimen/fans_btn_margin_vertical"
        android:background="@drawable/bind_phone_selector"
        android:text="确定"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="@dimen/imp_txt_size" />

</LinearLayout>
