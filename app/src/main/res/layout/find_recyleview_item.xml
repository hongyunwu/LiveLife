<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/recyleview_item_padding">

        <ImageView
            android:id="@+id/iv_live_thumb_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/thumbpic_01"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_live_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_live_thumb_pic"
            android:layout_marginTop="@dimen/page_horizontal"
            android:text="吖吖"
            android:textColor="@color/normal_txt_color"
            android:textSize="@dimen/content_txt_size" />

        <TextView
            android:id="@+id/tv_live_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_live_nick_name"
            android:text="脱口秀"
            android:textColor="@color/orange_color"
            android:textSize="@dimen/tips_txt_size" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_live_category"
            android:layout_marginLeft="@dimen/content_pic_size"
            android:layout_toRightOf="@id/tv_live_category"
            android:text="五个字好难"
            android:textColor="@color/tips_txt_color"
            android:textSize="@dimen/tips_txt_size" />

        <TextView
            android:id="@+id/tv_live_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="8370人"
            android:textColor="@color/tips_txt_color"
            android:textSize="@dimen/tips_txt_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_is_living"
            android:background="@drawable/home_item_live"
            android:layout_marginTop="@dimen/page_horizontal"
            android:layout_marginRight="@dimen/page_horizontal"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>