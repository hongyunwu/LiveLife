<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/dialog_bg_shape"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_title"
        android:text="绑定手机"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:textColor="@color/normal_txt_color"
        android:textSize="@dimen/dialog_txt_size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_desc"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:text="绑定手机让更多朋友发现你！"
        android:textSize="@dimen/imp_txt_size"
        android:textColor="@color/normal_txt_color"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/page_vertical"
        android:layout_marginLeft="@dimen/page_vertical"
        android:divider="@drawable/btn_divider_shape"
        android:layout_marginTop="@dimen/page_vertical"
        android:layout_marginBottom="@dimen/page_vertical"
        android:showDividers="middle"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_dialog_cancel"
            android:layout_height="@dimen/dialog_btn_height"
            android:background="@drawable/dialog_cancel_selector"
            android:textSize="@dimen/dialog_txt_size"
            android:textColor="@color/tips_txt_color"
            android:text="以后再说"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_dialog_confirm"
            android:layout_height="@dimen/dialog_btn_height"
            android:background="@drawable/dialog_confirm_selector"
            android:textSize="@dimen/dialog_txt_size"
            android:textColor="@color/white"
            android:text="马上绑定"/>
    </LinearLayout>

</LinearLayout>