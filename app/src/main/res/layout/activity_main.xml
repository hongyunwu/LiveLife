<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_drawer"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <!--主页面 start -->
    <include layout="@layout/layout_home_content"/>
    <!--侧边栏-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nv_left_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white"
        android:overScrollMode="never"
        app:headerLayout="@layout/layout_header_navigation"
        app:itemBackground="@drawable/navi_item_selector"
        app:itemTextColor="@color/normal_txt_color"
        app:menu="@menu/menu_navigation"
        app:theme="@style/menu_item_style" />
</android.support.v4.widget.DrawerLayout>
