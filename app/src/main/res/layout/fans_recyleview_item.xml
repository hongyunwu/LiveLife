<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navi_item_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_fans_item_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/page_vertical"
        android:layout_marginLeft="@dimen/page_horizontal"
        android:layout_marginRight="@dimen/page_horizontal"
        android:layout_marginTop="@dimen/page_vertical"
        android:background="@drawable/fans_item_portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/page_vertical"
        android:layout_marginTop="@dimen/page_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fans_item_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="很慵懒的兔子"
            android:textColor="@color/normal_txt_color"
            android:textSize="@dimen/content_txt_size" />

        <TextView
            android:id="@+id/tv_fans_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/vertical_txt_margin"
            android:paddingTop="@dimen/vertical_txt_margin"
            android:text="#我要上推荐##新人求关注"
            android:textColor="@color/normal_txt_color"
            android:textSize="@dimen/tips_txt_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fans_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟前"
                android:textColor="@color/sub_green_color"
                android:drawableRight="@drawable/fans_item_live"
                android:drawablePadding="@dimen/content_pic_size"
                android:textSize="@dimen/tips_txt_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/content_pic_size"
                android:layout_marginRight="@dimen/content_pic_size"
                android:background="@drawable/fans_item_circle" />

            <TextView
                android:id="@+id/tv_fans_item_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="211人观看"
                android:textColor="@color/tips_txt_color"
                android:textSize="@dimen/tips_txt_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
